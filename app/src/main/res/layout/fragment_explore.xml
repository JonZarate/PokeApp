<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jonzarate.pokeapp.ui.fragment.ExploreFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etExplorePokemonInput"
            android:layout_weight="1" />

        <Button
            android:text="@string/text_explore_search"
            android:layout_height="match_parent"
            android:id="@+id/btnExploreSearch"
            android:layout_width="120dp" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_pokemon" />

    <Button
        android:text="@string/text_explore_pokemon_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddPokemon" />
</LinearLayout>
